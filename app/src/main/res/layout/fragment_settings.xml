    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <include layout="@layout/appbar_title_layout" />


    <TextView
        android:id="@+id/btnLogout"
        style="@style/text_14_bold"
